<!DOCTYPE html>
<html>
  <head>
    <title>Unit1</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light c-nav">
      <%= link_to 'Unit 1', admin_root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'Posts', admin_posts_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Add New Post', new_admin_post_path, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= render 'shared/flash'%>
      <%= yield %>
    </div>
    <footer class="c-footer">
      <div class="container">
      </div>
    </footer>
  </body>
</html>
