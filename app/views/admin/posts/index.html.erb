<h1>Posts</h1>
<% if @posts.exists? %>
  <% @posts.each do |post| %>
    <p>
      <%= link_to post.title, post_path(post) %> - 
      [<%= link_to 'edit', edit_admin_post_path(post) %>], 
      [<%= link_to 'delete', admin_post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %>]<br/>
    </p>
  <% end %>
<% else %>
  <p>There are currently no posts to display. Why not try <%= link_to 'adding', new_admin_post_path %> one?</p>
<% end %>