<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <h1 class="c-article__header"><%= @post.title %></h1>
    <hr class="c-article__rule" />
    <p class="c-article__intro" ><%= @post.intro %></p>
    <p class="c-article__body"><%= @post.body %></p>
    <div id="disqus_thread"></div>
  </div>
    <script>
    var disqus_config = function () {
      this.page.url = "<%= post_url(@post) %>";  // Replace PAGE_URL with your page's canonical URL variable
      this.page.identifier = "<%= @post.id %>"; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
    };
    
    (function() { // DON'T EDIT BELOW THIS LINE
      var d = document, s = d.createElement('script');
      s.src = 'https://unit1-1.disqus.com/embed.js';
      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
    })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
</div>